<div class="ui centered grid">
  <div class="row"></div>
  <div class="row">
    <div class="four wide column">
      <h2 class="ui teal image header">
        <div class="content">Login</div>
      </h2>

      <% if flash.now[:alert].present? %>
        <div class="ui error message">
          <p><%= flash.now[:alert]%></p>
        </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "ui large form" }) do |f| %>

        <div class="ui stacked segment">
          <div class="field">
            <%= link_to user_omniauth_authorize_path(:twitter), class: 'ui twitter button fluid large' do %>
              <i class="twitter icon"></i>
              Login with Twitter
            <% end %>
          </div>

          <div class="field">
            <div class="ui left icon input">
              <i class="user icon"></i>
              <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
            </div>
          </div>

          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <div class="ui checkbox left floated">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            </div>
          <% end %>
          <%= f.submit "Log in", class: "ui teal button" %>

          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
