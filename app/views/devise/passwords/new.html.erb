<div class="ui centered grid">
  <div class="row"></div>
  <div class="row">
    <div class="four wide column">
      <h2 class="ui teal image header">
        <div class="content">Forgot your password?</div>
      </h2>

      <% if resource.errors.present? %>
          <div class="ui error message">
            <% resource.errors.full_messages.each do |msg| %>
                <div class="item"> <%= msg %> </div>
            <% end %>
          </div>
      <% end %>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "ui large form" }) do |f| %>
        <div class="ui stacked segment">
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true %>
          </div>

          <%= f.submit "Send me reset password instructions", class: "ui teal button" %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
